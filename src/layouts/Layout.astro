---
interface Props {
	title: string;
}

const { title } = Astro.props;

import appleIcon from "/src/img/apple-touch-icon.png"
import favicon48 from "/src/img/favicon-48x48.png";
import favicon96 from "/src/img/favicon-96x96.png";
import webManifest from "/src/img/site.webmanifest";
import safariTab from "/src/img/safari-pinned-tab.svg";

import ogUrl from '/src/img/web-app-manifest-512x512.png'

const currentPath = Astro.url.pathname;
const baseUrl = 'https://usedream.ai';
const fullUrl = `${baseUrl}${currentPath}`;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Dream - Research-led AI that makes anything possible" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href={appleIcon.src}>
		<link rel="icon" type="image/png" sizes="48x48" href={favicon48.src}>
		<link rel="icon" type="image/png" sizes="96x96" href={favicon96.src}>
		<link rel="manifest" href={webManifest}>
		<link rel="mask-icon" href={safariTab.src} color="#FFD601">
		<meta name="msapplication-TileColor" content="#FFD601">
		<meta name="theme-color" content="#FFD601">
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<meta name="og:url" content={fullUrl} />
		<meta property="og:logo" content={ogUrl.src} />

		<slot name="postSeo" />

		<title>{title}</title>

			<!-- Google tag (gtag.js) -->
			<script async src="https://www.googletagmanager.com/gtag/js?id=AW-16724054319"></script>
			<script is:inline>
				window.dataLayer = window.dataLayer || [];
				function gtag(){dataLayer.push(arguments);}
				gtag('js', new Date());

				gtag('config', 'AW-16724054319');
			</script>
	</head>
	<body>
		<slot />
	</body>
</html>
