---
interface Props {
	title: string;
}

const { title } = Astro.props;

import appleIcon from "/src/img/apple-touch-icon.png"
import favicon32 from "/src/img/favicon-32x32.png";
import favicon16 from "/src/img/favicon-16x16.png";
import webManifest from "/src/img/site.webmanifest";
import safariTab from "/src/img/safari-pinned-tab.svg";

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Applied Thought - Research-led AI for stronger growth" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href={appleIcon.src}>
		<link rel="icon" type="image/png" sizes="32x32" href={favicon32.src}>
		<link rel="icon" type="image/png" sizes="16x16" href={favicon16.src}>
		<link rel="manifest" href={webManifest}>
		<link rel="mask-icon" href={safariTab.src} color="#ffd601">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffd601">
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<title>{title}</title>

			<!-- Google tag (gtag.js) -->
			<script async src="https://www.googletagmanager.com/gtag/js?id=AW-16724054319"></script>
			<script is:inline>
				window.dataLayer = window.dataLayer || [];
				function gtag(){dataLayer.push(arguments);}
				gtag('js', new Date());

				gtag('config', 'AW-16724054319');
			</script>
	</head>
	<body>
		<slot />
	</body>
</html>
