---
interface Props {
	label: string;
	href: string;
}

const { label, href } = Astro.props;
---

<a class="button" href={href} target="_blank">
    <slot />
    {label}
</a>

<style>
    .button {
        background: rgba(255, 214, 1,.5);
        backdrop-filter: blur(2px);
        color: #061636;
        box-shadow: inset 0 0 0 2px #061636;
        padding: 12px 24px;
        border-radius: 32px;
        text-decoration: none;
        font-weight: 500;
        font-size: 16px;
        transition: background-color .2s ease, color .2s ease;
    }

    .button:hover {
        background-color: rgba(255,255,255,.8);
    }
</style>