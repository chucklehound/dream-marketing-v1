---
interface Props {
	title: string;
	body: string;
}

const { title, class: className, body } = Astro.props;
---

<div class:list={['content-card', className]}>
	<slot />
</div>

<style>
	.content-card {
        padding: 24px;
        border: 1px solid rgba(0,13,38,.1);
        box-shadow: inset 0 1px 1px rgba(255,255,255,.3);
        position: relative;
        border-radius: 16px;
	}
</style>
