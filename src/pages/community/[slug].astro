---
import { getCollection, getEntry } from 'astro:content';
import PostSeo from '../../components/postSeo.astro';
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import whatsAppIcon from '/src/img/whats-app-icon.svg';
import phoneIcon from '/src/img/phone-call.svg';
import arrowleftLight from '/src/img/arrow-left-white.svg?raw';
import { object } from 'astro:schema';

import HireGuyBlock from '../../components/HireGuyBlock.astro';

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map(
    ({
      data: {
        featuredImage,
        featuredImageAlt,
        postTitle,
        seoMetaDescription,
      },
      slug,
    }) => {
      return {
        params: { slug },
        props: {
          featuredImage,
          featuredImageAlt,
          seoMetaDescription,
          postTitle,
        },
      };
    },
  );
}

type PostCollection = CollectionEntry<"posts">;
type Props = Pick<
  PostCollection["data"],
  | "featuredImage"
  | "featuredImageAlt"
  | "seoMetaDescription"
  | "postTitle"
> &
  Pick<PostCollection, "render">;

const { slug } = Astro.params;
const {
  featuredImage,
  featuredImageAlt,
  seoMetaDescription: metadescription,
  postTitle: title,
}: Props = Astro.props;

const post = await getEntry('posts', slug);
const { Content, headings } = await post.render();

// Clean headings by adding ID attributes
const cleanHeadings = headings.map(heading => {
  const id = heading.text
    .toLowerCase()
    .replace(/[^\w\s-]/g, '')  // Remove special characters
    .replace(/\s+/g, '-')        // Replace spaces with hyphens
    .replace(/^-+|-+$/g, '');    // Remove leading/trailing hyphens

  return { ...heading, id };
});
---

<Layout title={post.data.postTitle} noindex>
    <PostSeo slot="postSeo">
      <meta property="og:title" content={post.data.postTitle} />
      <meta property="og:description" content={post.data.seoMetaDescription} />
      <meta property="og:image" content={post.data.featuredImage.src} />
      <meta property="og:type" content="article" />
    </PostSeo>

    <Navigation />
    <main class="pinch-footer">
        <section class="post-content">
            <div class="post-header">
              <a class="post-back-link" href="/community" data-transition="page"><Fragment set:html={arrowleftLight} /><span>View all posts</span></a>

                <img src={post.data.featuredImage.src} />
                <div class="post-details">
                  <small>{new Date(post.data.datePublished).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                })}</small>
                <h1>{post.data.postTitle}</h1>
                
                <p>{post.data.seoMetaDescription}</p>
                </div>
            </div>
            <article>
                {cleanHeadings.length > 0 && (
                  <nav class="toc">
                    <ul>
                      {cleanHeadings.map(({ level, text, id }) => (
                        <li>
                          <a href={`#${id}`}>{text}</a>
                        </li>
                      ))}
                    </ul>
                  </nav>
                )}
                
                <div class="article-content-container">
                  <Content />
                </div>
            </article>
        </section>
        <HireGuyBlock />
    </main>
    
    <Footer />
</Layout>
