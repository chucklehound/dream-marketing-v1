---
import Layout from '../layouts/Layout.astro';

import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

import Button from '../components/Button.astro';

import priceStar from '/src/img/price-star.svg?raw';

import tableSales from '/src/img/sales-table-dreamie.png';
import tablePA from '/src/img/pa-table-dreamie.png';

import checkIcon from '/src/img/check.svg';


---

<Layout title="Dream Pricing - Priced for every business, open to any business">
	<Navigation />
	<header class="hero-home solo-header">
		<div class="hero-elements main-content">
			<section class="header-text">
				<h1 class="page-title">Dream Pricing</h1>
				<span>Priced for every business, open to any business.</span>
			</section>
		</div>
	</header>
	<main>
		<section class="main-content pricing-table">
			<article class="content-container">
				<h3>Try your AI employees today</h3>
				<section aria-labelledby="pricing-heading">
					<h2 id="pricing-heading" class="visually-hidden">Pricing plans</h2>
					<ul role="list" class="pricing-grid">
					  {/* Entrepreneur — Most popular */}
					  <li class="plan promoted" aria-label="Entrepreneur plan, most popular">
						<article aria-labelledby="plan-ent-title" aria-describedby="plan-ent-price plan-ent-trial">
						  <div class="plan-header">
							<Fragment set:html={priceStar} />
							<h3 id="plan-ent-title" class="plan-title">Entrepreneur</h3>
							<p class="plan-badge" aria-label="Most popular">Most popular</p>
						  </div>
				  
						  <p id="plan-ent-price" class="plan-price">
							£39.99<span class="per">/month</span>
						  </p>
				  
						  <Button
							label="Sign up now"
							href="/sign-up"
							target=""
							variant="primary"
							size="medium"
							aria-describedby="plan-ent-trial"
						  />
				  
						  <p id="plan-ent-trial" class="plan-trial">
							<span aria-hidden="true" class="plan-trial-icon" /> 14 days free trial
						  </p>
				  
						  <hr class="plan-sep" aria-hidden="true" />
				  
						  <ul class="plan-features">
							<h4 class="plan-subtitle">What AI employees can you hire?</h4>
							<li>Personal Assistant</li>
							<li>
							  Head of Sales
							  <small class="plan-note"> (Maximum 50 outreaches/ month)</small>
							</li>
						  </ul>
				  
						  <hr class="plan-sep" aria-hidden="true" />
				  
						  <ul class="plan-features">
							  <h4 class="plan-subtitle">Maximum users</h4>
							  <p class="plan-limit">1 account</p>
						  </ul>
						</article>
					  </li>
				  
					  {/* Start‑up */}
					  <li class="plan" aria-label="Start-up plan">
						<article aria-labelledby="plan-start-title" aria-describedby="plan-start-price plan-start-trial">
						  <div class="plan-header">
							<Fragment set:html={priceStar} />
							<h3 id="plan-start-title" class="plan-title">Start-up</h3>
						  </div>
				  
						  <p id="plan-start-price" class="plan-price">
							£100<span class="per">/month</span>
						  </p>
				  
						  <Button
							label="Sign up now"
							href="/sign-up"
							target=""
							variant="secondary"
							size="medium"
							aria-describedby="plan-start-trial"
						  />
				  
						  <p id="plan-start-trial" class="plan-trial">
							<span aria-hidden="true" class="plan-trial-icon" /> 14 days free trial
						  </p>
				  
						  <hr class="plan-sep" aria-hidden="true" />
				  
						  <ul class="plan-features">
							<h4 class="plan-subtitle">What AI employees can you hire?</h4>
							<li>All employees at Start‑up level</li>
							<li>Business, Sales, Marketing, &amp; Finance</li>
						  </ul>
				  
						  <hr class="plan-sep" aria-hidden="true" />
				  
						  <ul class="plan-features">
							  <h4 class="plan-subtitle">Maximum users</h4>
							  <p class="plan-limit">3 accounts</p>
						  </ul>
						</article>
					  </li>
				  
					  {/* Business */}
					  <li class="plan" aria-label="Business plan">
						<article aria-labelledby="plan-biz-title" aria-describedby="plan-biz-price plan-biz-trial">
						  <div class="plan-header">
							<Fragment set:html={priceStar} />
							<h3 id="plan-biz-title" class="plan-title">Business</h3>
						  </div>
				  
						  <p id="plan-biz-price" class="plan-price">
							£250<span class="per">/month</span>
						  </p>
				  
						  <Button
							label="Sign up now"
							href="/sign-up"
							target=""
							variant="secondary"
							size="medium"
							aria-describedby="plan-biz-trial"
						  />
				  
						  <p id="plan-biz-trial" class="plan-trial">
							<span aria-hidden="true" class="plan-trial-icon" /> 14 days free trial
						  </p>
				  
						  <hr class="plan-sep" aria-hidden="true" />
				  
						  <ul class="plan-features">
							<h4 class="plan-subtitle">What AI employees can you hire?</h4>
							<li>All employees at Business level</li>
							<li>Business, Sales, Marketing, &amp; Finance</li>
						  </ul>
				  
						  <hr class="plan-sep" aria-hidden="true" />
				  
						  <ul class="plan-features">
							  <h4 class="plan-subtitle">Maximum users</h4>
							  <p class="plan-limit">10 accounts</p>
						  </ul>
						</article>
					  </li>
					</ul>
				  </section>
				  <section class="main-content" aria-labelledby="employee-comparison-heading">
					<article class="content-container">
					  <h3 id="employee-comparison-heading">What can your employees do for your business?</h3>
				  
					  <!-- Personal Assistant -->
					  <table class="employee-comparison" cellspacing="0" cellpadding="0">
						<thead>
						  <tr class="table-head-row">
							<!-- WHOLE left block is the TH -->
							<th scope="col" class="employee-colhead">
							  <div class="employee-header">
								<img src={tablePA.src} alt="" class="employee-icon" aria-hidden="true" />
								<span class="employee-title">Personal Assistant</span>
							  </div>
							</th>
				  
							<th scope="col" class="plan-colhead">
							  <Fragment set:html={priceStar} />
							  <span class="plan-name">Entrepreneur</span>
							  <Button label="Sign up now" href="/sign-up" target="" variant="secondary" size="small" />
							</th>
							<th scope="col" class="plan-colhead">
							  <Fragment set:html={priceStar} />
							  <span class="plan-name">Start-up</span>
							  <Button label="Sign up now" href="/sign-up" target="" variant="secondary" size="small" />
							</th>
							<th scope="col" class="plan-colhead">
							  <Fragment set:html={priceStar} />
							  <span class="plan-name">Business</span>
							  <Button label="Sign up now" href="/sign-up" target="" variant="secondary" size="small" />
							</th>
						  </tr>
				  
						</thead>
				  
						<tbody>
						  <tr>
							<td>Your unlimited email &amp; calendar assistant</td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
						  </tr>
						  <tr>
							<td>Book and manage your travel</td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
						  </tr>
						  <tr>
							<td>Create briefings for your meetings</td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
						  </tr>
						  <tr>
							<td>Automatically draft and follow-up on emails</td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
						  </tr>
						  <tr>
							<td>And more...</td>
							<td colspan="3"></td>
						  </tr>
						</tbody>
					  </table>
				  
					  <!-- Head of Sales -->
					  <table class="employee-comparison" cellspacing="0" cellpadding="0">
						<thead>
						  <tr class="table-head-row">
							<th scope="col" class="employee-colhead">
							  <div class="employee-header">
								<img src={tableSales.src} alt="" class="employee-icon" aria-hidden="true" />
								<span class="employee-title">Head of Sales</span>
							  </div>
							</th>
				  
							<th scope="col" class="plan-colhead">
							  <Fragment set:html={priceStar} />
							  <span class="plan-name">Entrepreneur</span>
							  <Button label="Sign up now" href="/sign-up" target="" variant="secondary" size="small" />
							</th>
							<th scope="col" class="plan-colhead">
							  <Fragment set:html={priceStar} />
							  <span class="plan-name">Start-up</span>
							  <Button label="Sign up now" href="/sign-up" target="" variant="secondary" size="small" />
							</th>
							<th scope="col" class="plan-colhead">
							  <Fragment set:html={priceStar} />
							  <span class="plan-name">Business</span>
							  <Button label="Sign up now" href="/sign-up" target="" variant="secondary" size="small" />
							</th>
						  </tr>
						</thead>
				  
						<tbody>
						  <tr>
							<td>Run your email outreach</td>
							<td>
							  <span class="price-detail">
								Price per contact: Free<br />Limit: 50/month
							  </span>
							</td>
							<td>
							  <span class="price-detail">
								Price per contact: £0.25<br />Limit: 1000/month
							  </span>
							</td>
							<td>
							  <span class="price-detail">
								Price per contact: £0.20<br />Limit: 5000/month
							  </span>
							</td>
						  </tr>
						  <tr>
							<td>Manage your funnel</td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
						  </tr>
						  <tr>
							<td>Handle customer contracts</td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
						  </tr>
						  <tr>
							<td>Book and manage customer meetings</td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
							<td aria-label="Included"><img src={checkIcon.src} alt="A tick icon"></td>
						  </tr>
						  <tr>
							<td>And more...</td>
							<td colspan="3"></td>
						  </tr>
						</tbody>
					  </table>
					</article>
				  </section>
				  
				  
			</article>
		</section>
	</main>
	<Footer />
</Layout>