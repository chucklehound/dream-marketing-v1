---
import Layout from '../../layouts/Layout.astro';

import Button from '../../components/Button.astro';
import Navigation from '../../components/Navigation.astro';
import UseCaseBlock from '../../components/UseCaseBlock.astro';
import Footer from '../../components/Footer.astro';
import Logo from '../../components/Logo.astro';

import arrowRightDark from "/src/img/arrow-right-dark.svg";
import arrowRightYellow from '/src/img/arrow-right-yellow.svg';

import introImage1 from '/src/img/use-target.png';
import introImage2 from '/src/img/use-agents.png';
import introImage3 from '/src/img/use-research.png';
import introImage4 from '/src/img/use-language.png';
import introImage5 from '/src/img/use-presale.png';

import "../../styles/main.scss";
---

<Layout title="Dream use cases - extend sales to new markets">
	<Navigation />
	<header>
		<div class="hero-elements main-content">
			<section class="header-text">
                <small class="tag"><a href="/use-cases">Use cases</a></small>
				<h1 id="page-title" class="page-title">For companies who want to extend sales to new markets</h1> <!-- Default text -->
