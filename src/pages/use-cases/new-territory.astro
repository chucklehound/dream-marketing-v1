				target="_blank"
			><img src={arrowRightDark.src} role="presentation" alt="" loading="lazy"/></Button> 
		</article>
		
	</section>
	<Footer />

	<!-- Client-side script for handling dynamic language switching -->
	<script>
		// Language-specific headings
		const translations = {
			en: 'For companies who want to extend sales to new markets',
			fr: 'For companies who want to extend sales to the French market',
			es: 'For companies who want to extend sales to the Spanish market',
			de: 'For companies who want to extend sales to the German market',
			sv: 'For companies who want to extend sales to the Swedish market'
		};
	
		// Get the current URL search params
		const params = new URLSearchParams(window.location.search);
		const lang = params.get('lang') || 'en'; // Default to 'en' if no lang parameter is provided
	
		// Update the H1 content based on the language
		const pageTitle = document.getElementById('page-title');
		if (pageTitle) {
			pageTitle.textContent = translations[lang] || translations['en'];
		}
	
		// Hide all language-specific content
		const allContentBlocks = document.querySelectorAll('.english-content, .french-content, .german-content, .spanish-content, .swedish-content');
		allContentBlocks.forEach((el) => {
			// Cast the element as HTMLElement to access 'style'
			(el as HTMLElement).style.display = 'none';
		});
	
		// Show the relevant content block based on the language flag
		const contentClassMap = {
			en: '.english-content',
			fr: '.french-content',
			de: '.german-content',
			es: '.spanish-content',
			sv: '.swedish-content'
		};
	
		const contentClass = contentClassMap[lang];
		if (contentClass) {
			const langContent = document.querySelector(contentClass);
			if (langContent) {
				(langContent as HTMLElement).style.display = 'flex'; // Show the relevant content block
			}
		}
	</script>
	
</Layout>
