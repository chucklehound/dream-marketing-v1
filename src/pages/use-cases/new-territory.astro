---
import Layout from '../../layouts/Layout.astro';

import Button from '../../components/Button.astro';
import Navigation from '../../components/Navigation.astro';
import UseCaseBlock from '../../components/UseCaseBlock.astro';
import Footer from '../../components/Footer.astro';
import Logo from '../../components/Logo.astro';

import arrowRightDark from "/src/img/arrow-right-dark.svg";
import arrowRightYellow from '/src/img/arrow-right-yellow.svg';

import "../../styles/main.scss";
---

<Layout title="Dream use cases - extend sales to new markets">
	<Navigation />
	<header>
		<Logo />
		<div class="hero-elements main-content">
			<section class="header-text">
                <small class="tag"><a href="/use-cases">Use cases</a></small>
				<h1 id="page-title" class="page-title">For companies who want to extend sales to new markets</h1> <!-- Default text -->
				<span>Dream now enables companies to introduce new markets to their outbound sales in a matter of hours. 
                    Where companies would previously have had to hire sales people that covered all the desired languages requirements - now companies can kick start new market penetration when they want.                     
                </span>
                <Button 	
					label="Get started with Dream"
					href="https://calendly.com/cgdcowley/discovery-call-dream" 
					target="_blank"
				><img src={arrowRightYellow.src} role="presentation" /></Button>
			</section>
		</div>
	</header>
	<main>
		<section class="main-content content-row">
			<UseCaseBlock state="state4" />
            <UseCaseBlock state="state1" />
            <UseCaseBlock state="state2" />
            <UseCaseBlock state="state3" />
		</section>
        <section class="main-content content-list">
            <section class="main-content content-row"> 
                <article class="stats-box"> 
                <h2>What this delivers</h2> 
                <ul class="stats-items"> 
                    <li><span class="number">10x</span><p>Your pipeline generation</p> </li>
                    <li><span class="number">25%</span><p>The cost vs a human</p> </li>
                </article> 
            </section>
        </section>
	</main>
	<section class="final-cta">
		<article class="main-content cta-container">
			<h3>Accelerate your sales, maximise conversion, with instant ramp-up</h3>
			<p>Get your sales running on autopilot. Start using Dream today.</p>
			<Button 	
				label="Book your demo"
				href="https://calendly.com/cgdcowley/discovery-call-dream" 
				target="_blank"
			><img src={arrowRightDark.src} role="presentation" alt="" loading="lazy"/></Button> 
		</article>
		
	</section>
	<Footer />

	<!-- Add client-side script to handle the dynamic language switch -->
	<script>
		const translations = {
			en: 'For companies who want to extend sales to new markets',
			fr: 'Pour les entreprises qui souhaitent étendre leurs ventes à de nouveaux marchés',
			es: 'Para las empresas que quieren expandir las ventas a nuevos mercados',
			de: 'Für Unternehmen, die ihren Vertrieb auf neue Märkte ausdehnen möchten'
		};

		// Get the current URL search params
		const params = new URLSearchParams(window.location.search);
		const lang = params.get('lang') || 'en'; // Default to 'en' if no lang parameter

		// Update the H1 content based on the language
		const pageTitle = document.getElementById('page-title');
		if (pageTitle) {
			pageTitle.textContent = translations[lang] || translations['en'];
		}
	</script>
</Layout>
